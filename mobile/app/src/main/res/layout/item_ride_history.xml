<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_passenger_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Peter Petrovic"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

            <TextView
                android:id="@+id/tv_passenger_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#123465798"
                android:textSize="12sp"
                android:textColor="@color/text_gray"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_pickup_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kneza Milosa 3"
                android:textSize="13sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tv_dropoff_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kajmakalinska 5"
                android:textSize="13sp"
                android:textColor="@color/text_secondary" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:gravity="end">

            <TextView
                android:id="@+id/tv_ride_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24 Oct, 2025"
                android:textSize="13sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tv_total_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1500.00"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tv_cancellation_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not cancelled"
                android:textSize="12sp"
                android:textColor="@color/text_gray" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_panic_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_panic_red"
                android:contentDescription="Panic status"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/ll_rating_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_star1"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_star_filled"
                    android:contentDescription="Star 1" />

                <ImageView
                    android:id="@+id/iv_star2"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_star_filled"
                    android:layout_marginStart="2dp"
                    android:contentDescription="Star 2" />

                <ImageView
                    android:id="@+id/iv_star3"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_star_filled"
                    android:layout_marginStart="2dp"
                    android:contentDescription="Star 3" />

                <ImageView
                    android:id="@+id/iv_star4"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_star_filled"
                    android:layout_marginStart="2dp"
                    android:contentDescription="Star 4" />

                <ImageView
                    android:id="@+id/iv_star5"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_star_empty"
                    android:layout_marginStart="2dp"
                    android:contentDescription="Star 5" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>